{
  "name": "next-vibe-template",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@8.15.5",
  "scripts": {
    "dev": "bunx next dev",
    "build": "bunx next build",
    "start": "bunx next start",
    "lint": "clear; eslint . --ext .ts,.tsx --fix",
    "format": "clear; prettier --write .",
    "check": "clear; tsc --noEmit",
    "prune": "clear; npx knip",
    "test:unit": "clear; vitest",
    "test:api": "clear; vitest -c vitest.api.config.ts",
    "test:e2e": "clear; playwright test",
    "test:component": "clear; playwright test -c playwright-ct.config.ts",
    "test:coverage": "clear; vitest run --coverage",
    "test": "turbo run test:*",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.25.1",
    "@next/eslint-plugin-next": "^15.3.1",
    "@playwright/experimental-ct-react": "^1.44.0",
    "@playwright/test": "^1.44.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.27",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.4.1",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-jsdoc": "^50.6.9",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^3.1.0",
    "fast-check": "^3.13.0",
    "globals": "^16.0.0",
    "husky": "^9.0.9",
    "jsdom": "^26.1.0",
    "knip": "^5.50.5",
    "lint-staged": "^15.5.1",
    "msw": "^2.2.2",
    "next-test-api-route-handler": "^4.0.0",
    "prettier": "^3.3.0",
    "turbo": "^2.0.11",
    "typescript": "^5.5.0",
    "typescript-eslint": "^8.31.0",
    "vite": "^6.3.2",
    "vitest": "^3.1.2"
  },
  "dependencies": {
    "next": "15.2.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "lint:next"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
